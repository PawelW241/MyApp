@model MyFirstApp.Entities.NotesEntity

@{
    ViewData["Title"] = "NotesCreate";
}

<h1>Create</h1>

<h4>NotesEntity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NotesCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Click to write note name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" class="form-control" rows="5" placeholder="Click to write text"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="NotesIndex">Back to List</a>
</div>

